{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2015", "es2016", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "esModuleInterop": true
  }
}
